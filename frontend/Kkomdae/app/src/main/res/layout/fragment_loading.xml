<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="36dp"
    tools:context=".ui.LoadingFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진을 준비하고 있어요"
        android:textColor="@color/gray800"
        style="@style/Display2"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점검을 시작할게요!"
        android:textColor="@color/gray600"
        style="@style/Title1"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <LinearLayout
        android:id="@+id/tv_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_progress"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle">>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/gray400"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점검 진행중... "
            style="@style/Label1"
            android:textColor="@color/gray600" />

        <TextView
            android:id="@+id/tv_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35%"
            android:layout_marginStart="4dp"
            android:textColor="@color/orange500"
            style="@style/Headline3" />

        <TextView
            android:id="@+id/tv_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=" (3분 소요 예상)"
            style="@style/Label4"
            android:textColor="@color/gray600" />
    </LinearLayout>

    <!-- 캐릭터 이미지 -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_loading1"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_progress_container" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/iv_character">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/gray200"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/check1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노트북 사진 데이터 처리"
            style="@style/Body1"
            android:textColor="@color/gray600"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/container1" />


    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/container1">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ProgressBar
                android:id="@+id/progress2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/gray200"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/check2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노트북 외관 분석 확인"
            style="@style/Body1"
            android:textColor="@color/gray600"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray100"
        app:layout_constraintTop_toBottomOf="@id/container2" />

    <LinearLayout
        android:id="@+id/container3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/container2">

        <!-- 로딩/체크 이미지 -->
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ProgressBar
                android:id="@+id/progress3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/gray200"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/check3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="invisible" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손상 여부 확인"
            style="@style/Body1"
            android:textColor="@color/gray600"
            android:layout_marginStart="12dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="분석 결과 보러가기"
        android:textColor="@color/white"
        style="@style/Title1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:backgroundTint="#4285F4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>